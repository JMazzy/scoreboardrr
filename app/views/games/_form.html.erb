<%= form_for game, html: {class: "ui form"} do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :score_type %>
    <%= f.select :score_type, Game.score_types.keys.map {|k| [k.humanize, k] }, html_options: { class: "ui fluid dropdown" } %>
  </div>

  <%= f.submit "Submit", class: "ui green button" %>
<% end %>
